<Window x:Class="CentroDeportivo.View.SociosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de socios"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="White"
        Height="715"
        Width="1124"
        WindowStartupLocation="CenterScreen">

    <!-- Color específico de la cabecera de ESTA ventana -->
    <Window.Resources>
        <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#6B4EFF"/>
    </Window.Resources>

    <Border BorderBrush="Gray" BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <!-- Cabecera -->
                <RowDefinition Height="Auto"/>
                <!-- Formulario -->
                <RowDefinition Height="Auto"/>
                <!-- Botones -->
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
            </Grid.RowDefinitions>

            <!-- ========================= -->
            <!-- CABECERA -->
            <!-- ========================= -->
            <DockPanel Grid.Row="0"
                       Style="{StaticResource WindowHeaderStyle}"
                       MouseLeftButtonDown="Window_DragMove">

                <!-- Botón cerrar -->
                <Button Content="✕"
                        DockPanel.Dock="Right"
                        Style="{StaticResource WindowHeaderCloseButton}"
                        Click="Cerrar_Click"/>

                <!-- Título -->
                <TextBlock Text="Gestión de socios"
                           Style="{StaticResource WindowHeaderTitle}"/>
            </DockPanel>

            <!-- ========================= -->
            <!-- CONTENEDOR PRINCIPAL -->
            <!-- ========================= -->
            <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="16"
                    Padding="20"
                    BorderBrush="#E5E7EB"
                    BorderThickness="0">

                <StackPanel>

                    <TextBlock Text="Datos del socio"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#111827"
                               Margin="0,0,0,20"/>

                    <!-- Tarjeta de formulario -->
                    <Border 
                            IsEnabled="{Binding FormularioHabilitado}"
                            Background="#F9FAFB"
                            CornerRadius="14"
                            Padding="16"
                            BorderBrush="#E5E7EB"
                            BorderThickness="1">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="191*"/>
                                <ColumnDefinition Width="248*"/>
                                <ColumnDefinition Width="135*"/>
                                <ColumnDefinition Width="99*"/>
                                <ColumnDefinition Width="283*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Nombre -->
                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Nombre"
                                           FontSize="13"
                                           Foreground="#374151"
                                           Margin="0,0,0,6"/>

                                <TextBox Style="{StaticResource TextBoxRedondeado}"
                                         Text="{Binding SocioSeleccionado.Nombre,
                                                UpdateSourceTrigger=PropertyChanged
                                                ,ValidatesOnDataErrors=True}"/>
                            </StackPanel>

                            <!-- Email -->
                            <StackPanel Margin="191,0,12,0" Grid.ColumnSpan="3">
                                <TextBlock Text="Email"
                                           FontSize="13"
                                           Foreground="#374151"
                                           Margin="0,0,0,6"/>

                                <TextBox Style="{StaticResource TextBoxRedondeado}"
                                         Text="{Binding SocioSeleccionado.Email,
                                                UpdateSourceTrigger=PropertyChanged
                                                ,ValidatesOnDataErrors=True}"/>
                            </StackPanel>

                            <!-- Activo -->
                            <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Bottom"
                            Margin="135,0,12,0" Grid.ColumnSpan="3">

                                <TextBlock Text="Activo"
                               FontSize="13"
                               Foreground="#374151"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>

                                <CheckBox Style="{StaticResource CheckBoxRedondeado}"
                                IsChecked="{Binding SocioSeleccionado.Activo}"/>
                            </StackPanel>


                            <!-- Guardar -->
                            <Button Grid.Column="5"
                                    Content="Guardar"
                                    Style="{StaticResource BotonPrimario}"
                                    Command="{Binding GuardarCommand}"
                                    VerticalAlignment="Top" Margin="0,23,0,0"/>
                        </Grid>

                    </Border>

                </StackPanel>

            </Border>

            <!-- ========================= -->
            <!-- BOTONES -->
            <!-- ========================= -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        Margin="20,0,20,10">

                <Button Content="Nuevo"
                        Style="{StaticResource BotonListar}"
                        Command="{Binding NuevoCommand}"
                        Margin="0,0,10,0"/>

                <Button Content="Eliminar"
                        Style="{StaticResource BotonBorrar}"
                        Command="{Binding EliminarCommand}"/>

                <Button Content="Crear reserva"
                    Style="{StaticResource BotonCrearReserva}"
                    Click="AbrirReservas_Click"
                    Margin="10,0,0,0"/>

            </StackPanel>

            <!-- ========================= -->
            <!-- DATAGRID -->
            <!-- ========================= -->
            <DataGrid Grid.Row="3"
                      ItemsSource="{Binding ListaSocios}"
                      SelectedItem="{Binding SocioSeleccionado}"
                      Style="{StaticResource ModernDataGrid}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre"
                                        Binding="{Binding Nombre}"/>
                    <DataGridTextColumn Header="Email"
                                        Binding="{Binding Email}"/>
                    <DataGridCheckBoxColumn Header="Activo"
                                            Binding="{Binding Activo}"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>

    </Border>
</Window>
