<Window x:Class="CentroDeportivo.View.ActividadesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de actividades"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="White"
        Height="715"
        Width="1124"
        WindowStartupLocation="CenterScreen">

    <!-- Color específico de la cabecera de ESTA ventana -->
    <Window.Resources>
        <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#0F766E"/>
    </Window.Resources>

    <Border BorderBrush="Gray" BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- CABECERA -->
            <DockPanel Grid.Row="0"
                       Style="{StaticResource WindowHeaderStyle}"
                       MouseLeftButtonDown="Window_DragMove">

                <!-- Botón cerrar -->
                <Button Content="✕"
                        DockPanel.Dock="Right"
                        Style="{StaticResource WindowHeaderCloseButton}"
                        Click="Cerrar_Click"/>

                <!-- Título -->
                <TextBlock Text="Gestión de actividades"
                           Style="{StaticResource WindowHeaderTitle}"/>
            </DockPanel>

            <!-- CONTENEDOR PRINCIPAL -->
            <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="16"
                    Padding="20"
                    BorderBrush="#E5E7EB"
                    BorderThickness="0">

                <StackPanel>

                    <TextBlock Text="Datos de la actividad"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#111827"
                               Margin="0,0,0,20"/>

                    <!-- Tarjeta de formulario -->
                    <Border IsEnabled="{Binding FormularioHabilitado}"
                            Background="#F9FAFB"
                            CornerRadius="14"
                            Padding="16"
                            BorderBrush="#E5E7EB"
                            BorderThickness="1">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Nombre -->
                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Nombre"
                                           FontSize="13"
                                           Foreground="#374151"
                                           Margin="0,0,0,6"/>

                                <TextBox Style="{StaticResource TextBoxRedondeado}"
                                         Text="{Binding ActividadSeleccionada.Nombre,
                                                UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <!-- Aforo -->
                            <StackPanel Grid.Column="1" Margin="0,0,12,0">
                                <TextBlock Text="Aforo máximo"
                                           FontSize="13"
                                           Foreground="#374151"
                                           Margin="0,0,0,6"/>

                                <TextBox Style="{StaticResource TextBoxRedondeado}"
                                         Text="{Binding ActividadSeleccionada.AforoMaximo,
                                                UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <!-- Guardar -->
                            <Button Grid.Column="2"
                                    Content="Guardar"
                                    Style="{StaticResource BotonPrimario}"
                                    Command="{Binding GuardarCommand}"
                                    VerticalAlignment="Bottom"/>
                        </Grid>

                    </Border>

                </StackPanel>

            </Border>

            <!-- BOTONES -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        Margin="20,0,20,10">

                <Button Content="Nuevo"
                        Style="{StaticResource BotonListar}"
                        Command="{Binding NuevoCommand}"
                        Margin="0,0,10,0"/>

                <Button Content="Eliminar"
                        Style="{StaticResource BotonBorrar}"
                        Command="{Binding EliminarCommand}"/>
            </StackPanel>

            <!-- DATAGRID -->
            <DataGrid Grid.Row="3"
                      ItemsSource="{Binding ListaActividades}"
                      SelectedItem="{Binding ActividadSeleccionada}"
                      Style="{StaticResource ModernDataGrid}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre"
                                        Binding="{Binding Nombre}"/>
                    <DataGridTextColumn Header="Aforo máximo"
                                        Binding="{Binding AforoMaximo}"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>

    </Border>
</Window>
