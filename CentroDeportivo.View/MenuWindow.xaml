<Window x:Class="CentroDeportivo.View.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Centro Deportivo - Menú principal"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="White"
        Height="300"
        Width="750"
        WindowStartupLocation="CenterScreen">

    <!-- Color específico de la cabecera del menú -->
    <Window.Resources>
        <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#334155"/>
    </Window.Resources>

    <Border BorderBrush="Gray" BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <!-- Cabecera -->
                <RowDefinition Height="Auto"/>
                <!-- Navegación -->
                <RowDefinition Height="Auto"/>
                <!-- Separador -->
                <RowDefinition Height="Auto"/>
                <!-- Estadísticas -->
            </Grid.RowDefinitions>

            <!-- ========================= -->
            <!-- CABECERA -->
            <!-- ========================= -->
            <DockPanel Grid.Row="0"
                       Style="{StaticResource WindowHeaderStyle}"
                       MouseLeftButtonDown="Window_DragMove">

                <Button Content="✕"
                        DockPanel.Dock="Right"
                        Style="{StaticResource WindowHeaderCloseButton}"
                        Click="Cerrar_Click"/>

                <TextBlock Text="Centro Deportivo - Panel principal"
                           Style="{StaticResource WindowHeaderTitle}"/>
            </DockPanel>

            <!-- ========================= -->
            <!-- NAVEGACIÓN -->
            <!-- ========================= -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="20"
                        HorizontalAlignment="Center">

                <Border Style="{StaticResource CardNavegacion}" Width="200" Padding="0" MouseLeftButtonUp="AbrirSocios_Click">

                    <Grid Margin="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Barra lateral -->
                        <Border Background="#6B4EFF" CornerRadius="12,0,0,12"/>

                        <!-- Contenido -->
                        <StackPanel Grid.Column="1" Margin="12">
                            <TextBlock Text="Socios" FontSize="18" FontWeight="SemiBold"/>
                            <TextBlock Text="Gestión de socios" Foreground="#6B7280" Margin="0,4,0,0"/>       
                        </StackPanel>
                    </Grid>
                </Border>


                <Border Style="{StaticResource CardNavegacion}" Width="200" MouseLeftButtonUp="AbrirActividades_Click" Padding="0">

                    <Grid Margin="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="#0F766E" CornerRadius="12,0,0,12"/>

                        <StackPanel Grid.Column="1" Margin="12">
                            <TextBlock Text="Actividades" FontSize="18" FontWeight="SemiBold"/>
                            <TextBlock Text="Gestión de actividades" Foreground="#6B7280" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>


                <Border Style="{StaticResource CardNavegacion}" Width="200" Padding="0" MouseLeftButtonUp="AbrirReservas_Click">

                    <Grid Margin="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="#6D28D9" CornerRadius="12,0,0,12"/>

                        <StackPanel Grid.Column="1" Margin="12">
                            <TextBlock Text="Reservas" FontSize="18" FontWeight="SemiBold"/>
                            <TextBlock Text="Gestión de reservas" Foreground="#6B7280" Margin="0,4,0,0"/>   
                        </StackPanel>
                    </Grid>
                </Border>

            </StackPanel>

            <!-- ========================= -->
            <!-- SEPARADOR -->
            <!-- ========================= -->
            <Border Grid.Row="2"
            Height="1"
            Width="700"
            HorizontalAlignment="Center"
            Margin="0,10,0,10"
            Background="#E5E7EB"
            CornerRadius="1"/>


            <!-- ========================= -->
            <!-- ESTADÍSTICAS -->
            <!-- ========================= -->
            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        Margin="10"
                        HorizontalAlignment="Center">

                <!-- Socios -->
                <Border Background="White"
                CornerRadius="12"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                Width="180"
                Margin="0,0,10,0">

                    <StackPanel>
                        <!-- Barra superior de color -->
                        <Border Background="#1E3A8A" Height="4" CornerRadius="12,12,0,0"/>

                        <!-- Contenido -->
                        <Border Padding="12">
                            <StackPanel>
                                <TextBlock Text="Total Socios" Foreground="#6B7280" FontSize="12"/>
                                <TextBlock Text="{Binding TotalSocios}" FontSize="24" FontWeight="Bold" Foreground="#1E3A8A"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>


                <!-- Actividades -->
                <Border Background="White"
                CornerRadius="12"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                Width="180"
                Margin="0,0,10,0">

                    <StackPanel>
                        <!-- Barra superior de color -->
                        <Border Background="#065F46" Height="4" CornerRadius="12,12,0,0"/>

                        <!-- Contenido -->
                        <Border Padding="12">
                            <StackPanel>
                                <TextBlock Text="Total Actividades" Foreground="#6B7280" FontSize="12"/>
                                <TextBlock Text="{Binding TotalActividades}" FontSize="24" FontWeight="Bold" Foreground="#065F46"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>


                <!-- Actividad más reservada -->
                <Border Background="White"
                CornerRadius="12"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                Width="260">

                    <StackPanel>
                        <!-- Barra superior de color -->
                        <Border Background="#B45309" Height="4" CornerRadius="12,12,0,0"/>

                        <!-- Contenido -->
                        <Border Padding="12">
                            <StackPanel>
                                <TextBlock Text="Actividad más reservada" Foreground="#6B7280" FontSize="12"/>
                                <TextBlock Text="{Binding ActividadMasReservada}" FontSize="16" FontWeight="SemiBold" Margin="0,4,0,0" Foreground="#B45309"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>


            </StackPanel>

        </Grid>

    </Border>
</Window>
