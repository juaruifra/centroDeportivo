<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
             Color="#D6E8FF"/>

    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                 Color="#1E3A8A"/>

    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
             Color="#D6E8FF"/>

    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}"
                 Color="#1E3A8A"/>


    <Style x:Key="TextBoxRedondeado" TargetType="TextBox">

        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#D1D5DB"/>
        <Setter Property="BorderThickness" Value="1"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="Border"
                        CornerRadius="10"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ScrollViewer x:Name="PART_ContentHost"/>
                    </Border>

                    <ControlTemplate.Triggers>

                        <!-- Estado de error -->
                        <Trigger Property="Validation.HasError" Value="True">
                            <Setter TargetName="Border"
                                Property="BorderBrush"
                                Value="#DC2626"/>
                            <Setter TargetName="Border"
                                Property="BorderThickness"
                                Value="2"/>
                        </Trigger>

                        <!-- Deshabilitado -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Border"
                                Property="Opacity"
                                Value="0.6"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>




    <Style x:Key="BotonPrimario" TargetType="Button">

        <!-- puedes dejar Height si quieres -->
        <Setter Property="Height" Value="40"/>

        <Setter Property="Padding" Value="20,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Background" Value="#005BBB"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="8"
                 Background="{TemplateBinding Background}">
                        <ContentPresenter
                 Margin="{TemplateBinding Padding}"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>

            <!-- Botón deshabilitado -->
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.5"/>
                <Setter Property="Cursor" Value="Arrow"/>
            </Trigger>

        </Style.Triggers>

    </Style>

    <Style x:Key="BotonListar" TargetType="Button" BasedOn="{StaticResource BotonPrimario}">

        <Setter Property="Background" Value="#2563EB"/>

    </Style>

    <Style x:Key="BotonEditar" TargetType="Button" BasedOn="{StaticResource BotonPrimario}">

        <Setter Property="Background" Value="#F59E0B"/>

    </Style>

    <Style x:Key="BotonBorrar" TargetType="Button" BasedOn="{StaticResource BotonPrimario}">

        <Setter Property="Background" Value="#DC2626"/>

    </Style>

    <Style x:Key="BotonCrearReserva" TargetType="Button" BasedOn="{StaticResource BotonPrimario}">

        <Setter Property="Background" Value="#0D9488"/>

    </Style>


    <Style x:Key="ModernDataGridHeader" TargetType="DataGridColumnHeader">

        <Setter Property="Background" Value="#EFF6FF"/>
        <Setter Property="Foreground" Value="#1E3A8A"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="BorderThickness" Value="0"/>

    </Style>

    <Style x:Key="ModernDataGridRow" TargetType="DataGridRow">

        <Setter Property="MinHeight" Value="38"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#F1F5FF"/>
            </Trigger>
        </Style.Triggers>

    </Style>



    <Style x:Key="ModernDataGridCell" TargetType="DataGridCell">

        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="FontSize" Value="13"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DataGridCell">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="12,0"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

    <Style x:Key="ModernDataGrid"
       TargetType="DataGrid">

        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="RowBackground" Value="White"/>
        <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
        <Setter Property="GridLinesVisibility" Value="None"/>
        <Setter Property="ColumnWidth" Value="*"/>

        <Setter Property="SelectionUnit" Value="FullRow"/>
        <Setter Property="SelectionMode" Value="Single"/>

        <Setter Property="ColumnHeaderStyle"
            Value="{StaticResource ModernDataGridHeader}"/>

        <Setter Property="RowStyle"
            Value="{StaticResource ModernDataGridRow}"/>

        <Setter Property="CellStyle"
            Value="{StaticResource ModernDataGridCell}"/>

    </Style>

    <Style x:Key="CardNavegacion"
       TargetType="Border">

        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="BorderBrush" Value="#E5E7EB"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Margin" Value="0,0,20,0"/>

        <Style.Triggers>

            <!-- Hover -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#F9FAFB"/>
                <Setter Property="BorderBrush" Value="#1E3A8A"/>
            </Trigger>

        </Style.Triggers>

    </Style>

    <!-- Colores por defecto -->
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#6B4EFF"/>
    <SolidColorBrush x:Key="HeaderForegroundBrush" Color="#F5F3FF"/>

    <Style x:Key="WindowHeaderStyle" TargetType="DockPanel">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="{DynamicResource HeaderBackgroundBrush}"/>
    </Style>

    <Style x:Key="WindowHeaderTitle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource HeaderForegroundBrush}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
    </Style>

    <Style x:Key="WindowHeaderCloseButton" TargetType="Button">
        <Setter Property="Width" Value="40"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource HeaderForegroundBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style x:Key="CheckBoxRedondeado"
       TargetType="CheckBox">

        <!-- Tamaño general -->
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="26"/>
        <Setter Property="Cursor" Value="Hand"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid>

                        <!-- Fondo -->
                        <Border x:Name="BackgroundBorder"
                            CornerRadius="13"
                            Background="#E5E7EB"/>

                        <!-- Círculo interior -->
                        <Ellipse x:Name="Thumb"
                             Width="20"
                             Height="20"
                             Fill="White"
                             HorizontalAlignment="Left"
                             Margin="3"/>

                    </Grid>

                    <!-- Estados -->
                    <ControlTemplate.Triggers>

                        <!-- Activado -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="BackgroundBorder"
                                Property="Background"
                                Value="#2563EB"/>
                            <Setter TargetName="Thumb"
                                Property="HorizontalAlignment"
                                Value="Right"/>
                        </Trigger>

                        <!-- Deshabilitado -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="BackgroundBorder"
                                Property="Opacity"
                                Value="0.5"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



</ResourceDictionary>